@model WebApplication1.Models.Customer

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <span>@Html.DisplayNameFor(m => m.Name): </span> @Html.TextBoxFor(m => m.Name) <br />
    <span>生日: </span> @Html.TextBoxFor(m => m.Birthday, "{0:d}") <br />
    <span>照片: </span> <input type="file" name="photo" /><br />
    @Html.HiddenFor(m=>m.Photo)
    <input type="submit" value="確定修改" />
}

